<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"

       >

        <Button
            android:id="@+id/btnlessthan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text=""
            />


        <Button
            android:id="@+id/btnAllCategory"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:textColor="@color/colorRed"
            android:text="All Category"
            android:textSize="11dp"
            />


        <ImageButton
            android:id="@+id/btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:src="@drawable/msg"

            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgview1"
        android:layout_width="wrap_content"
        android:layout_height="188dp"
        android:src="@drawable/p1"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:background="#E0E0E0"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="This Round Ends In 22 : 32 : 46"
            android:padding="4dp"
            android:layout_marginLeft="3dp"
           />

     </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rvBestDeal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBestDealList"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorRed"
            android:src="@drawable/album4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtproductName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="12dp"
                android:text="From Tianjin Headset Earbuds  "
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:text="From Tianjin"
                android:textSize="12dp"
                />

            <TextView
                android:id="@+id/txtOrder"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="Minimun Order 6 Pcs"
                android:textSize="12dp"
                />


            <LinearLayout
                android:layout_below="@+id/txtOrder"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ks-16,500    "
                    android:textSize="13dp"

                    />

                <TextView
                    android:id="@+id/txtsold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28 Sold"
                    android:textSize="13dp"
                    />

                <ImageButton
                    android:id="@+id/imgDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"/>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
